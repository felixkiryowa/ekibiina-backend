<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="001" author="francis">
        <!-- Example table creation -->
        <createTable tableName="roles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- Add more schema changes as needed -->
    </changeSet>
    <changeSet id="002" author="francis">
        <!-- Example table creation -->
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firebase_uid" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- Add more schema changes as needed -->
    </changeSet>
    <changeSet id="003" author="francis">
        <!-- Example table creation -->
        <createTable tableName="user_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- Add more schema changes as needed -->
    </changeSet>
    <changeSet id="004" author="kiryowafrancis">
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="user_id"
                constraintName="fk_user_id"
                referencedTableName="users"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="role_id"
                constraintName="fk_role_id"
                referencedTableName="roles"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="005" author="kiryowafrancis">
        <insert tableName="roles">
            <column name="name">MEMBER</column>
        </insert>
    </changeSet>
    <changeSet id="006" author="kiryowafrancis">
        <insert tableName="roles">
            <column name="name">ADMIN</column>
        </insert>
    </changeSet>
    <changeSet id="007" author="francis">
        <!-- Example table creation -->
        <createTable tableName="saccos">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_number" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_number" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="website" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <!-- Add more schema changes as needed -->
    </changeSet>

    <changeSet id="008" author="Angella">
        <createTable tableName="members">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sacco_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_income" type="bigint"/>
            <column name="occupation" type="varchar(50)"/>
            <column name="bank" type="varchar(100)"/>
            <column name="account_number" type="varchar(50)"/>
            <column name="signature" type="varchar(255)"/>
            <column name="id_type" type="varchar(50)"/>
            <column name="id_number" type="varchar(50)"/>
            <column name="address" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_member_preference_id" type="int"/>
            <column name="nationality" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="comments" type="text"/>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="members"
                baseColumnNames="user_id"
                constraintName="fk_member_user"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="members"
                baseColumnNames="sacco_id"
                constraintName="fk_member_sacco"
                referencedTableName="saccos"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="009" author="nakato">
        <createTable tableName="balances">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="transaction_id" type="BIGINT"/>
            <column name="balance" type="DECIMAL(18,2)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="balances"
                                 baseColumnNames="transaction_id"
                                 referencedTableName="transactions"
                                 referencedColumnNames="id"
                                 constraintName="fk_balances_transaction"/>
    </changeSet>

    <changeSet id="010" author="nakato">
        <createTable tableName="savings">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5,2)"/>
            <column name="amount" type="DECIMAL(18,2)"/>
            <column name="maturity_date" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="sacco_id" type="BIGINT"/>
            <column name="member_id" type="BIGINT"/>
            <column name="saving_type" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="savings"
                                 baseColumnNames="sacco_id"
                                 referencedTableName="saccos"
                                 referencedColumnNames="id"
                                 constraintName="fk_savings_sacco"/>

        <addForeignKeyConstraint baseTableName="savings"
                                 baseColumnNames="member_id"
                                 referencedTableName="members"
                                 referencedColumnNames="member_id"
                                 constraintName="fk_savings_member"/>
    </changeSet>

    <changeSet id="011" author="nakato">
        <createTable tableName="transactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(18,2)"/>
            <column name="tran_description" type="VARCHAR(255)"/>
            <column name="transaction_type" type="VARCHAR(50)"/>
            <column name="narrations" type="VARCHAR(255)"/>
            <column name="reference" type="VARCHAR(100)"/>
            <column name="transaction_reference" type="VARCHAR(100)"/>
            <column name="gateway_status" type="VARCHAR(50)"/>
            <column name="payment_method" type="VARCHAR(50)"/>
            <column name="currency" type="VARCHAR(10)"/>
            <column name="transaction_status" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="sacco_id" type="BIGINT"/>
            <column name="account_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="transactions"
                                 baseColumnNames="sacco_id"
                                 referencedTableName="saccos"
                                 referencedColumnNames="id"
                                 constraintName="fk_transactions_sacco"/>

        <addForeignKeyConstraint baseTableName="transactions"
                                 baseColumnNames="account_id"
                                 referencedTableName="accounts"
                                 referencedColumnNames="id"
                                 constraintName="fk_transactions_account"/>
    </changeSet>

    <changeSet id="012" author="nakato">
        <createTable tableName="accounts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="minimum_membership_period" type="INT"/>
            <column name="account_number" type="VARCHAR(50)"/>
            <column name="account_type" type="VARCHAR(50)"/>
            <column name="payment_integration" type="VARCHAR(50)"/>
            <column name="balance" type="DECIMAL(18,2)" defaultValueNumeric="0.0"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="sacco_id" type="BIGINT"/>
            <column name="member_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="accounts"
                                 baseColumnNames="sacco_id"
                                 referencedTableName="saccos"
                                 referencedColumnNames="id"
                                 constraintName="fk_accounts_sacco"/>

        <addForeignKeyConstraint baseTableName="accounts"
                                 baseColumnNames="member_id"
                                 referencedTableName="members"
                                 referencedColumnNames="member_id"
                                 constraintName="fk_accounts_member"/>
    </changeSet>

</databaseChangeLog>